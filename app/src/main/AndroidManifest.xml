            android:name=".ui.PembayaranActivity"
            android:exported="false" />
        <activity
            android:name=".ui.UtamaActivity"
            android:exported="false" />
        <activity
            android:name=".ui.InputSaksiActivity"
            android:exported="false" />
        <activity
            android:name=".ui.InputWaliActivity"
            android:exported="true"></activity>
        <activity
            android:name=".ui.InputPengantinPriaActivity"
            android:exported="false" />
        <activity
            android:name=".ui.InputPengantinWanitaActivity"
            android:exported="false" />
        <activity
            android:name=".ui.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>