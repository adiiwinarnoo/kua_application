<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.InputSaksiActivity">

    <TextView
        android:id="@+id/tv_tittle"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="Data Permohonan Pengantin"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:background="@drawable/bg_editext"/>
    <TextView
        android:id="@+id/tv_saksi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Nama Saksi*:"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_tittle"
        app:layout_constraintStart_toStartOf="@id/tv_tittle"
        app:layout_constraintEnd_toEndOf="@id/tv_tittle"/>

    <EditText
        android:id="@+id/edt_saksi"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_editext"
        android:layout_marginTop="5dp"
        android:hint="masukan nama saksi"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_saksi"
        app:layout_constraintStart_toStartOf="@id/tv_tittle"
        app:layout_constraintEnd_toEndOf="@id/tv_tittle" />

    <TextView
        android:id="@+id/tv_ttl_saksi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tanggal Lahir Saksi*:"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edt_saksi"
        app:layout_constraintStart_toStartOf="@id/tv_tittle"
        app:layout_constraintEnd_toEndOf="@id/tv_tittle"/>

    <EditText
        android:id="@+id/edt_ttl"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_editext"
        android:layout_marginTop="5dp"
        android:hint="masukan tanggal lahir saksi"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ttl_saksi"
        app:layout_constraintStart_toStartOf="@id/tv_tittle"
        app:layout_constraintEnd_toEndOf="@id/tv_tittle" />
    <TextView
        android:id="@+id/tv_alamat_saksi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Alamat Saksi*:"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edt_ttl"
        app:layout_constraintStart_toStartOf="@id/tv_tittle"
        app:layout_constraintEnd_toEndOf="@id/tv_tittle"/>

    <EditText
        android:id="@+id/edt_alamat_saksi"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_editext"
        android:layout_marginTop="5dp"
        android:hint="masukan tanggal alamat saksi"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_alamat_saksi"
        app:layout_constraintStart_toStartOf="@id/tv_tittle"
        app:layout_constraintEnd_toEndOf="@id/tv_tittle" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="50dp"
        android:text="Submit"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/blue_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_alamat_saksi"
        app:layout_constraintStart_toStartOf="@id/tv_tittle"
        app:layout_constraintEnd_toEndOf="@id/tv_tittle"/>

</androidx.constraintlayout.widget.ConstraintLayout>