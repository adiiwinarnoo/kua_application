<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfilActivity">

    <TextView
        android:id="@+id/tv_tittle"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="Data Profil"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:background="@drawable/bg_editext"/>

    <TextView
        android:id="@+id/tv_nama_lengkap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Nama Lengkap*:"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_tittle"
        app:layout_constraintStart_toStartOf="@id/tv_tittle"
        app:layout_constraintEnd_toEndOf="@id/tv_tittle"/>

    <EditText
        android:id="@+id/edt_nama_lengkap"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_editext"
        android:layout_marginTop="5dp"
        android:hint="2022-02-02"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nama_lengkap"
        app:layout_constraintStart_toStartOf="@id/tv_nama_lengkap"
        app:layout_constraintEnd_toEndOf="@id/tv_nama_lengkap" />
    <TextView
        android:id="@+id/tv_jenis_kelamin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Jenis Kelamin*:"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edt_nama_lengkap"
        app:layout_constraintStart_toStartOf="@id/tv_tittle"
        app:layout_constraintEnd_toEndOf="@id/tv_tittle"/>

    <Spinner
        android:id="@+id/spinner_jenis_kelamin"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_jenis_kelamin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        style="@style/Widget.AppCompat.Spinner"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_editext"
        android:entries="@array/jenis_kelamin"/>

    <TextView
        android:id="@+id/tv_alamat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Alamat*:"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/spinner_jenis_kelamin"
        app:layout_constraintStart_toStartOf="@id/tv_tittle"
        app:layout_constraintEnd_toEndOf="@id/tv_tittle"/>

    <EditText
        android:id="@+id/edt_alamat"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_editext"
        android:layout_marginTop="5dp"
        android:hint="2022-02-02"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_alamat"
        app:layout_constraintStart_toStartOf="@id/tv_nama_lengkap"
        app:layout_constraintEnd_toEndOf="@id/tv_nama_lengkap" />

    <TextView
        android:id="@+id/tv_nomor_hp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Nomor Handphone*:"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edt_alamat"
        app:layout_constraintStart_toStartOf="@id/tv_tittle"
        app:layout_constraintEnd_toEndOf="@id/tv_tittle"/>

    <EditText
        android:id="@+id/edt_nomor_hp"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_editext"
        android:layout_marginTop="5dp"
        android:hint="2022-02-02"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nomor_hp"
        app:layout_constraintStart_toStartOf="@id/tv_nama_lengkap"
        app:layout_constraintEnd_toEndOf="@id/tv_nama_lengkap" />
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Username*:"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edt_nomor_hp"
        app:layout_constraintStart_toStartOf="@id/tv_tittle"
        app:layout_constraintEnd_toEndOf="@id/tv_tittle"/>

    <EditText
        android:id="@+id/edt_username"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_editext"
        android:layout_marginTop="5dp"
        android:hint="2022-02-02"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        app:layout_constraintStart_toStartOf="@id/tv_nama_lengkap"
        app:layout_constraintEnd_toEndOf="@id/tv_nama_lengkap" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Email*:"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edt_username"
        app:layout_constraintStart_toStartOf="@id/tv_tittle"
        app:layout_constraintEnd_toEndOf="@id/tv_tittle"/>

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_editext"
        android:layout_marginTop="5dp"
        android:hint="2022-02-02"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        app:layout_constraintStart_toStartOf="@id/tv_nama_lengkap"
        app:layout_constraintEnd_toEndOf="@id/tv_nama_lengkap" />


</androidx.constraintlayout.widget.ConstraintLayout>