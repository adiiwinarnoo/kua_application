<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterActivity">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:progressTint="@color/blue_2"
        android:visibility="gone"
        android:progressBackgroundTint="@color/blue_2"
        android:indeterminateTint="@color/blue_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_nama_lengkap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama lengkap"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <EditText
                android:id="@+id/edt_nama_lengkap"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_editext"
                android:layout_marginEnd="20dp"
                android:hint="masukan isian data"
                android:paddingStart="10dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/tv_nama_lengkap"
                app:layout_constraintStart_toStartOf="@id/tv_nama_lengkap"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tv_nomor_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor HP"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/edt_nama_lengkap"
                app:layout_constraintStart_toStartOf="parent"
                />
            <EditText
                android:id="@+id/edt_nomor_hp"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_editext"
                android:layout_marginEnd="20dp"
                android:hint="masukan isian data"
                android:paddingStart="10dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/tv_nomor_hp"
                app:layout_constraintStart_toStartOf="@id/tv_nomor_hp"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tv_alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/edt_nomor_hp"
                app:layout_constraintStart_toStartOf="parent"
                />

            <EditText
                android:id="@+id/edt_alamat"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_editext"
                android:hint="masukan isian data"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/tv_alamat"
                app:layout_constraintTop_toBottomOf="@id/tv_alamat" />
            <TextView
                android:id="@+id/tv_jenis_kelamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/edt_alamat"
                app:layout_constraintStart_toStartOf="parent"
                />
            <Spinner
                android:id="@+id/spinner_jenis_kelamin"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/tv_jenis_kelamin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="20dp"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_editext"
                android:entries="@array/jenis_kelamin"/>
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/spinner_jenis_kelamin"
                app:layout_constraintStart_toStartOf="parent"
                />
            <EditText
                android:id="@+id/edt_username"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_editext"
                android:layout_marginEnd="20dp"
                android:hint="masukan isian data"
                android:paddingStart="10dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/tv_username"
                app:layout_constraintStart_toStartOf="@id/tv_alamat"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/edt_username"
                app:layout_constraintStart_toStartOf="parent"
                />
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_editext"
                android:layout_marginEnd="20dp"
                android:hint="masukan isian data"
                android:paddingStart="10dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/tv_email"
                app:layout_constraintStart_toStartOf="@id/tv_alamat"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/edt_email"
                app:layout_constraintStart_toStartOf="parent"
                />
            <EditText
                android:id="@+id/edt_password"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_editext"
                android:layout_marginEnd="20dp"
                android:hint="masukan isian data"
                android:paddingStart="10dp"
                android:inputType="textPassword"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/tv_password"
                app:layout_constraintStart_toStartOf="@id/tv_alamat"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tv_captcha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Captcha"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/edt_password"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/tv_tittle_captcha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasil Perhitungan"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/tv_captcha"
                app:layout_constraintStart_toStartOf="parent"
                />

            <EditText
                android:id="@+id/edt_captcha"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:hint="masukan perhitungan"
                android:paddingStart="10dp"
                android:background="@drawable/bg_editext"
                app:layout_constraintTop_toBottomOf="@id/tv_tittle_captcha"
                app:layout_constraintStart_toStartOf="@id/tv_username"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tv_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="75dp"
                android:text="Sudah memilikin akun? silahkan Login"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/edt_captcha"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="disini"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/tv_reg"
                app:layout_constraintTop_toTopOf="@id/tv_reg"/>
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="50dp"
                android:text="Submit"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@color/blue_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_reg"
                app:layout_constraintStart_toStartOf="@id/edt_username"
                app:layout_constraintEnd_toEndOf="@id/edt_username"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>